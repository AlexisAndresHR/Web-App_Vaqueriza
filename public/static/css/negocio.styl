body
	font-size 14px
	font-family: 'Roboto', sans-serif

.interfaz
	min-height 100vh
	overflow hidden
	width 100%
	.menu
		float left
		width 100%
        background-color #FF0000
	.contenido
		width 100%

.mtop16
	margin-top 32px


// Generales 
.pagina
	padding-top 16px
	padding-bottom 16px
	.breadcrumb
		background-color #fff
		box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
		.breadcrumb-item
			a
				color #44a28b
				&:hover
					text-decoration none !important
	// Estilos para el contenedor de contenido de la interfaz
	.panel
		background-color #fff
		width 100%
		.encabezado
			border-bottom 1px solid #e8e8e8
			h3.title
				display inline-block
				padding 12px 16px
		.cuerpo_contenedor
			padding 16px
